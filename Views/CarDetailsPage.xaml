<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FavCars.Views.CarDetailsPage"
             Title="Car Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Image x:Name="CarImage" HeightRequest="200" Aspect="AspectFill" />

            <Label x:Name="CarName" FontAttributes="Bold" FontSize="24"/>
            <Label x:Name="CarYear" FontSize="18"/>

            <Label Text="Engine:" FontAttributes="Bold"/>
            <Label x:Name="CarEngine"/>

            <Label Text="Color:" FontAttributes="Bold"/>
            <Label x:Name="CarColor"/>

            <Label Text="Fuel Type:" FontAttributes="Bold"/>
            <Label x:Name="CarFuel"/>

         
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
